import React, { useState } from "react";

export default function App() {
  const [username, setUsername] = useState("");
  const [password, setPassword] = useState("");
  const [error, setError] = useState("");
  const [submitted, setSubmitted] = useState(false);

  const handleSubmit = (e) => {
    e.preventDefault();

    if (username.trim() === "" || password.trim() === "") {
      setError("Please enter both username and password.");
      setSubmitted(false);
    } else {
      setError("");
      setSubmitted(true);
    }
  };

  return (
    <div style={{ textAlign: "center", marginTop: "30px" }}>
      {/* Login Form */}
      <div
        style={{
          width: "300px",
          margin: "20px auto",
          border: "1px solid #ddd",
          borderRadius: "8px",
          padding: "20px",
          boxShadow: "0 2px 5px rgba(0,0,0,0.1)",
        }}
      >
        <h2 style={{ fontWeight: "bold" }}>Login</h2>
        <form onSubmit={handleSubmit}>
          <input
            type="text"
            placeholder="Username"
            value={username}
            onChange={(e) => setUsername(e.target.value)}
            style={{
              width: "90%",
              padding: "8px",
              margin: "8px 0",
              border: "1px solid #ccc",
              borderRadius: "4px",
            }}
          />
          <br />
          <input
            type="password"
            placeholder="Password"
            value={password}
            onChange={(e) => setPassword(e.target.value)}
            style={{
              width: "90%",
              padding: "8px",
              margin: "8px 0",
              border: "1px solid #ccc",
              borderRadius: "4px",
            }}
          />
          {error && (
            <p style={{ color: "red", fontSize: "14px" }}>{error}</p>
          )}
          <button
            type="submit"
            style={{
              width: "95%",
              backgroundColor: "#007bff",
              color: "white",
              border: "none",
              padding: "10px",
              borderRadius: "4px",
              cursor: "pointer",
              marginTop: "10px",
            }}
          >
            Login
          </button>
        </form>
      </div>

      {/* Display Result */}
      {submitted && (
        <div
          style={{
            backgroundColor: "#111",
            color: "white",
            padding: "10px",
            width: "250px",
            margin: "10px auto",
            borderRadius: "6px",
            textAlign: "left",
          }}
        >
          <p>
            <strong style={{ color: "#aaa" }}>Username :</strong> {username}
          </p>
          <p>
            <strong style={{ color: "#aaa" }}>Password :</strong> {password}
          </p>
        </div>
      )}
    </div>
  );
}
